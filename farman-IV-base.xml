<?xml version="1.0"?>

<PropertyList>

  <sim>
 
    <author type="string">BARANGER Emmanuel</author>
    <status type="string">0.1 Alpha</status>
    <aircraft-version>0.2</aircraft-version>
   
    <fuel-fraction>1.0</fuel-fraction>
  
    <sound>
      <path>Aircraft/Farman-IV/Sounds/farman-IV-sound.xml</path>
    </sound>
    
    <startup>
      <splash-texture>Aircraft/Farman-IV/farman-IV-splash.rgb</splash-texture>
    </startup>

    <virtual-cockpit archive="y">true</virtual-cockpit>
    <allow-toggle-cockpit archive="y">false</allow-toggle-cockpit>
    
    <model>
      <path>Aircraft/Farman-IV/Models/farman-IV.xml</path>
    </model>
    
    <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y">  0.000 </x-offset-m>	<!---Right-->
        <y-offset-m archive="y">  0.630 </y-offset-m>	<!--Up-->
        <z-offset-m archive="y"> -2.092 </z-offset-m>	<!--Back-->
        <pitch-offset-deg> 0 </pitch-offset-deg>
        <default-field-of-view-deg>60</default-field-of-view-deg>
      </config>
    </view>

    <view n="1">
      <config>
        <target-z-offset-m archive="y" type="double">3.49</target-z-offset-m>
      </config>
    </view>

    <view n="2">
      <config>
        <target-z-offset-m archive="y" type="double">3.49</target-z-offset-m>
      </config>
    </view>

    <view n="3">
      <config>
        <target-z-offset-m archive="y" type="double">3.49</target-z-offset-m>
      </config>
    </view>

    <view n="4">
      <config>
        <target-z-offset-m archive="y" type="double">3.49</target-z-offset-m>
      </config>
    </view>

    <view n="5">
      <config>
        <target-z-offset-m archive="y" type="double">3.49</target-z-offset-m>
      </config>
    </view>

    <view n="6">
      <config>
        <target-z-offset-m archive="y" type="double">3.49</target-z-offset-m>
      </config>
    </view>

  </sim>

  <!-- DÃ©marrer avec les freins parking -->
